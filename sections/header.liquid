{% schema %}
{
  "name": "Header Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bring Loved Ones Together with Every Delicious, Clean Creation."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover Burner Market"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "mission_subtitle",
      "label": "Mission Subtitle",
      "default": "OUR CORE MISSION"
    },
    {
      "type": "textarea",
      "id": "mission_text",
      "label": "Mission Text",
      "default": "We curate the finest, clean, and delicious food items to make it easy for you to create mouth-watering snacks and meals for yourself and your loved ones, effortlessly."
    }
  ],
  "presets": [
    {
      "name": "Header Hero",
      "category": "Header"
    }
  ]
}
{% endschema %}

<style>
.hero-section {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  overflow: hidden;
  background-color: #f6f6f4;
}

.hero-content {
  padding: 60px 80px;
  display: flex;
  flex-direction: column;
  gap: 70px;
}

.hero-text-container {
  display: flex;
  flex-direction: column;
  gap: 36px;
}

.hero-heading {
  max-width: 999px;
  font-size: 66px;
  font-weight: 600;
  color: #354439;
  line-height: 1.2;
  margin: 0;
}

.hero-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14px 28px;
  border-radius: 999px;
  background-color: #c06654;
  color: white;
  font-size: 20px;
  font-weight: 700;
  text-decoration: none;
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.hero-button:hover {
  background-color: #a85744;
  transform: translateY(-2px);
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.mission-section {
  background-color: #354439;
  padding-bottom: 80px;
  width: 100%;
}

.hero-image {
  width: 100%;
  height: 534px;
  object-fit: cover;
}

.mission-content {
  padding: 0 80px;
  display: flex;
  flex-direction: column;
  gap: 13px;
  margin-top: 43px;
}

.mission-subtitle {
  font-size: 19px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  margin: 0;
}

.mission-text {
  max-width: 1214px;
  font-size: 40px;
  color: white;
  line-height: 1.3;
  margin: 0;
}

@media screen and (max-width: 989px) {
  .hero-content {
    padding: 40px;
  }
  
  .hero-heading {
    font-size: 50px;
  }
  
  .mission-content {
    padding: 0 40px;
  }
  
  .mission-text {
    font-size: 32px;
  }
}

@media screen and (max-width: 749px) {
  .hero-content {
    padding: 30px 20px;
  }
  
  .hero-heading {
    font-size: 40px;
  }
  
  .mission-content {
    padding: 0 20px;
  }
  
  .mission-text {
    font-size: 28px;
  }
  
  .hero-image {
    height: 400px;
  }
}
</style>

<div class="page-width">
  <div class="hero-section">
    <div class="hero-content">
      <div class="hero-text-container">
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
        <a href="{{ routes.all_products_collection_url }}" class="hero-button">
          {{ section.settings.button_text }}
        </a>
      </div>
      
      <div class="mission-section">
        {% if section.settings.hero_image %}
          {%- assign image_height = 534 -%}
          {%- assign image_widths = '550,700,990,1100,1440,1800' | split: ',' -%}
          {%- capture image_html -%}
            {{ section.settings.hero_image | image_url: width: 1440 | image_tag: 
              class: 'hero-image',
              loading: 'lazy',
              height: image_height,
              widths: image_widths,
              sizes: '(min-width: 990px) 1440px, (min-width: 750px) 990px, calc(100vw - 30px)',
              alt: section.settings.heading
            }}
          {%- endcapture -%}
          {{ image_html }}
        {% endif %}
        
        <div class="mission-content">
          <p class="mission-subtitle">{{ section.settings.mission_subtitle }}</p>
          <p class="mission-text">{{ section.settings.mission_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>